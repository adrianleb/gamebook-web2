      "assertions": {
        "flagsSet": ["branch_pursuers", "path_direct"],
        "stats": {
          "courage": 6
        },
        "visitedCount": {
          "sc_1_0_001": 2,
          "sc_1_0_002": 1,
          "sc_1_0_010": 1
        }
      }
    },
    {
      "sequence": 4,
      "action": "save_snapshot",
      "description": "Save snapshot after first milestone for regression testing",
      "snapshotName": "pre_milestone_1"
    },
    {
      "sequence": 5,
      "action": "choose",
      "description": "Continue along Pursuers path - use non-attemptable choice",
      "choiceIndex": 1,
      "expectedScene": "sc_1_0_012",
      "assertions": {
        "flagsSet": ["pursuers_escaped_rejected"]
      }
    }
  ],
  "endingCriteria": {
    "sceneId": "sc_1_0_012",
    "flagsRequired": ["branch_pursuers", "pursuers_escaped_rejected"],
    "statsRequired": {
      "courage": 6
