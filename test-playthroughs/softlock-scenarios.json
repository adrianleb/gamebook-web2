{
  "meta": {
    "name": "softlock_scenarios",
    "description": "Intentional softlock tests. Validates softlock detection catches various deadlock scenarios. Uses actual content scenes (sc_1_0_001 <-> sc_1_0_004 back-and-forth pattern).",
    "author": "agent-e",
    "version": "2.0"
  },
  "startingState": {
    "flags": [],
    "inventory": [],
    "stats": {},
    "currentScene": "sc_1_0_001"
  },
  "steps": [
    {
      "sequence": 1,
      "action": "choose",
      "description": "Go to Maren's Guidance (sc_1_0_004)",
      "choiceIndex": 2,
      "expectedScene": "sc_1_0_004"
    },
    {
      "sequence": 2,
      "action": "choose",
      "description": "Return to Booth (revisit 1)",
      "choiceIndex": 1,
      "expectedScene": "sc_1_0_001"
    },
    {
      "sequence": 3,
      "action": "choose",
      "description": "Go to Maren's Guidance again (revisit 2)",
      "choiceIndex": 2,
      "expectedScene": "sc_1_0_004"
    },
    {
      "sequence": 4,
      "action": "checkpoint",
      "description": "Checkpoint - Maren's visited twice",
      "assertions": {
        "visitedCount": {
          "sc_1_0_004": 2,
          "sc_1_0_001": 3
        }
      }
    },
    {
      "sequence": 5,
      "action": "choose",
      "description": "Return to Booth again (revisit 3)",
      "choiceIndex": 1,
      "expectedScene": "sc_1_0_001"
    },
    {
      "sequence": 6,
      "action": "choose",
      "description": "Go to Maren's Guidance third time (revisit 3 - should trigger softlock)",
      "choiceIndex": 2,
      "expectedScene": "sc_1_0_004"
    }
  ],
  "softlockDetection": {
    "enabled": true,
    "maxSceneRevisits": 2,
    "failOnDetection": false,
    "continueOnDetection": true
  }
}
