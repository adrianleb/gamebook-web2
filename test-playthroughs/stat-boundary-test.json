{
  "meta": {
    "name": "stat_boundary_test",
    "description": "Tests stat check boundaries. Validates that stat gates work correctly at pass/fail thresholds. Uses actual content scene sc_1_0_003 (The Threshold Stage) with courage check.",
    "author": "agent-e",
    "version": "2.0"
  },
  "startingState": {
    "flags": [],
    "inventory": ["booth_key"],
    "stats": {
      "health": 10,
      "courage": 5
    },
    "currentScene": "sc_1_0_001"
  },
  "steps": [
    {
      "sequence": 1,
      "action": "choose",
      "description": "Go to Threshold Stage (have booth_key)",
      "choiceIndex": 1,
      "expectedScene": "sc_1_0_003"
    },
    {
      "sequence": 2,
      "action": "checkpoint",
      "description": "At Threshold Stage - courage >= 5 will pass",
      "assertions": {
        "currentScene": "sc_1_0_003",
        "stats": {
          "courage": 5
        },
        "inventoryContains": ["booth_key"]
      }
    },
    {
      "sequence": 3,
      "action": "choose",
      "description": "Pass stat check (courage >= 5)",
      "choiceIndex": 0,
      "expectedScene": "sc_1_0_901",
      "assertions": {
        "flagsSet": ["crossing_succeeded"]
      }
    }
  ],
  "endingCriteria": {
    "sceneId": "sc_1_0_901",
    "flagsRequired": ["crossing_succeeded"]
  },
  "softlockDetection": {
    "enabled": true,
    "maxSceneRevisits": 3
  }
}
