{
  "meta": {
    "name": "stat_boundary_test",
    "title": "Stat Boundary Test: Courage Check Pass/Fail",
    "description": "Tests stat check boundaries. Validates that courage >= 5 passes the threshold check while courage < 5 fails, with attemptable allowing both paths.",
    "author": "agent-e",
    "version": "2.0.0",
    "tags": ["stat-check", "boundary", "attemptable"]
  },
  "startingState": {
    "currentScene": "sc_1_0_001",
    "stats": {
      "script": 2,
      "stage_presence": 3,
      "improv": 2
    },
    "flags": ["game_started"],
    "inventory": ["booth_key"],
    "faction": "preservationist"
  },
  "steps": [
    {
      "sequence": 1,
      "action": "checkpoint",
      "description": "Verify starting stat value (stage_presence = 3, at threshold)",
      "assertions": {
        "currentScene": "sc_1_0_001",
        "stats": { "stage_presence": 3 },
        "inventoryContains": ["booth_key"]
      }
    },
    {
      "sequence": 2,
      "action": "choose",
      "choiceIndex": 1,
      "expectedScene": "sc_1_0_003",
      "description": "Go to Threshold Stage (have booth_key)"
    },
    {
      "sequence": 3,
      "action": "checkpoint",
      "description": "At Threshold Stage - stage_presence check available",
      "assertions": {
        "currentScene": "sc_1_0_003",
        "stats": { "stage_presence": 3 },
        "choicesAvailable": 3
      }
    },
    {
      "sequence": 4,
      "action": "choose",
      "choiceIndex": 0,
      "expectedScene": "sc_1_1_099",
      "description": "Pass stage_presence check (3 >= 3, succeeds)",
      "assertions": {
        "flagsSet": ["crossing_succeeded"],
        "stats": { "stage_presence": 3 }
      }
    },
    {
      "sequence": 5,
      "action": "checkpoint",
      "description": "Reached success scene - stat check passed",
      "assertions": {
        "currentScene": "sc_1_1_099",
        "flagsSet": ["crossing_succeeded"],
        "stats": { "stage_presence": 3 },
        "visitedCount": { "sc_1_0_001": 2, "sc_1_0_003": 1, "sc_1_1_099": 1 }
      }
    }
  ],
  "endingCriteria": {
    "sceneId": "sc_1_1_099",
    "flagsRequired": ["crossing_succeeded"],
    "statsRequired": {
      "stage_presence": 3
    }
  },
  "softlockDetection": {
    "enabled": true,
    "maxSceneRevisits": 3
  }
}
