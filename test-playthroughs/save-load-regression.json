{
  "meta": {
    "name": "save_load_regression",
    "description": "Tests save/load functionality and state round-trip. Validates that saves serialize and restore correctly. Uses actual content scenes from Hub 0.",
    "author": "agent-e",
    "version": "2.0"
  },
  "startingState": {
    "flags": [],
    "inventory": [],
    "stats": {
      "health": 10,
      "courage": 5,
      "insight": 5
    },
    "currentScene": "sc_1_0_001"
  },
  "steps": [
    {
      "sequence": 1,
      "action": "choose",
      "description": "Go to The Wings",
      "choiceIndex": 0,
      "expectedScene": "sc_1_0_002",
      "assertions": {
        "flagsSet": ["path_direct"],
        "inventoryContains": ["wings_pass"]
      }
    },
    {
      "sequence": 2,
      "action": "save_snapshot",
      "description": "Save state after first choice",
      "snapshotName": "after_first_choice"
    },
    {
      "sequence": 3,
      "action": "choose",
      "description": "Make second choice - continue to resolution",
      "choiceIndex": 0,
      "expectedScene": "sc_1_0_900",
      "assertions": {
        "flagsSet": ["path_direct"],
        "inventoryContains": ["wings_pass"]
      }
    },
    {
      "sequence": 4,
      "action": "load_snapshot",
      "description": "Load snapshot - should revert to state after step 1",
      "snapshotName": "after_first_choice",
      "assertions": {
        "currentScene": "sc_1_0_002",
        "flagsSet": ["path_direct"],
        "inventoryContains": ["wings_pass"]
      }
    },
    {
      "sequence": 5,
      "action": "choose",
      "description": "After loading, make different choice - go to pursuer path",
      "choiceIndex": 1,
      "expectedScene": "sc_1_0_010",
      "assertions": {
        "flagsSet": ["branch_pursuers", "path_direct"],
        "stats": {
          "courage": 6
        }
      }
    }
  ],
  "endingCriteria": {
    "sceneId": "sc_1_0_010",
    "flagsRequired": ["branch_pursuers", "path_direct"]
  },
  "softlockDetection": {
    "enabled": true,
    "maxSceneRevisits": 3
  }
}
