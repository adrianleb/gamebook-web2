{
  "meta": {
    "name": "vertical-slice-path-2",
    "title": "Vertical Slice Path 2: Inventory Gating",
    "description": "Tests hub → locked → key → resolution path. Verifies inventory-based choice gating and item acquisition. Corresponds to PT-VS-002 from TEST_PLAYTHROUGHS.md.",
    "author": "agent-e",
    "version": "1.0.0",
    "tags": [
      "vertical-slice",
      "inventory",
      "gating"
    ]
  },
  "startingState": {
    "currentScene": "sc_1_0_001",
    "stats": {
      "health": 10,
      "courage": 5,
      "insight": 5
    },
    "flags": [
      "game_started"
    ],
    "inventory": [],
    "faction": "preservationist"
  },
  "steps": [
    {
      "action": "checkpoint",
      "description": "Starting at hub scene sc_1_0_001",
      "assertions": {
        "currentScene": "sc_1_0_001",
        "choicesAvailable": 3,
        "flagsSet": [
          "game_started"
        ],
        "inventoryExcludes": [
          "booth_key"
        ]
      },
      "sequence": 1
    },
    {
      "action": "choose",
      "choiceIndex": 2,
      "description": "Attempt locked path (should be disabled - requires booth_key)",
      "expectedScene": "sc_1_0_001",
      "expectDisabled": true,
      "sequence": 2
    },
    {
      "action": "checkpoint",
      "description": "Still at hub - choice was disabled",
      "assertions": {
        "currentScene": "sc_1_0_001",
        "inventoryExcludes": [
          "booth_key"
        ]
      },
      "sequence": 3
    },
    {
      "action": "choose",
      "choiceIndex": 0,
      "description": "Go to Maren's Guidance to acquire key",
      "expectedScene": "sc_1_0_004",
      "sequence": 4
    },
    {
      "action": "checkpoint",
      "description": "At Maren's Guidance - about to receive booth_key",
      "assertions": {
        "currentScene": "sc_1_0_004",
        "choicesAvailable": 2
      },
      "sequence": 5
    },
    {
      "action": "choose",
      "choiceIndex": 0,
      "description": "Accept booth_key from Maren",
      "expectedScene": "sc_1_0_001",
      "expectedEffects": {
        "addInventory": [
          "booth_key"
        ],
        "addFlags": [
          "key_acquired"
        ]
      },
      "sequence": 6
    },
    {
      "action": "checkpoint",
      "description": "Back at hub with booth_key in inventory",
      "assertions": {
        "currentScene": "sc_1_0_001",
        "inventoryContains": [
          "booth_key"
        ],
        "flagsSet": [
          "game_started",
          "key_acquired"
        ]
      },
      "sequence": 7
    },
    {
      "action": "choose",
      "choiceIndex": 2,
      "description": "Now locked path is enabled - proceed to Threshold Stage",
      "expectedScene": "sc_1_0_003",
      "sequence": 8
    },
    {
      "action": "checkpoint",
      "description": "At Threshold Stage with booth_key",
      "assertions": {
        "currentScene": "sc_1_0_003",
        "inventoryContains": [
          "booth_key"
        ],
        "flagsSet": [
          "game_started",
          "key_acquired",
          "location_booth_visited"
        ],
        "visitedCount": {
          "sc_1_0_001": 2
        }
      },
      "sequence": 9
    },
    {
      "action": "choose",
      "choiceIndex": 0,
      "description": "Continue to resolution",
      "expectedScene": "sc_1_0_900",
      "sequence": 10
    }
  ],
  "endingCriteria": {
    "sceneId": "sc_1_0_900",
    "flagsRequired": [
      "key_acquired",
      "location_booth_visited"
    ],
    "inventoryRequired": [
      "booth_key"
    ]
  },
  "softlockDetection": {
