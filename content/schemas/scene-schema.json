{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/adrianleb/gamebook-web2/content/schemas/scene-schema.json",
  "title": "Gamebook Scene",
  "description": "Individual scene data including text, choices, conditions, and effects for The Understage gamebook. Schema accepts content format (underscores) which scene-loader transforms to runtime format (hyphens).",
  "type": "object",
  "required": ["id", "title", "text", "choices"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "id": {
      "type": "string",
      "pattern": "^(sc_|bk_)[a-z0-9_-]+$"
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "location": {
      "type": "string"
    },
    "text": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 1
        },
        {
          "type": "object",
          "required": ["location", "paragraphs"],
          "properties": {
            "location": {
              "type": "string"
            },
            "paragraphs": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "minItems": 1
            }
          }
        }
      ]
    },
    "art": {
      "oneOf": [
        { "type": "string" },
        { "type": "null" }
      ]
    },
    "music": {
      "type": "string"
    },
    "sfx": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "audio": {
      "type": "object",
      "properties": {
        "music": {
          "oneOf": [
            { "type": "string" },
            { "type": "null" }
          ]
        },
        "sfx": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "effectsOnEnter": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "$ref": "#/$defs/effect"
          }
        },
        {
          "$ref": "#/$defs/effect"
        }
      ]
    },
    "onEnter": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "$ref": "#/$defs/effect"
          }
        },
        {
          "$ref": "#/$defs/effect"
        }
      ]
    },
    "choices": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["label", "to"],
        "properties": {
          "id": {
            "type": "string"
          },
          "label": {
            "type": "string",
            "minLength": 1
          },
          "to": {
            "type": "string",
            "pattern": "^(sc_|bk_)[a-z0-9_-]+$"
          },
          "conditions": {
            "oneOf": [
              {
                "$ref": "#/$defs/condition"
              },
              {
                "type": "array",
                "items": {
                  "$ref": "#/$defs/condition"
                }
              },
              {
                "type": "null"
              }
            ]
          },
          "onChoose": {
            "oneOf": [
              {
                "type": "array",
                "items": {
                  "$ref": "#/$defs/effect"
                }
              },
              {
                "type": "null"
              }
            ]
          },
          "disabledHint": {
            "oneOf": [
              { "type": "string" },
              { "type": "null" }
            ]
          },
          "style": {
            "type": "string",
            "enum": ["default", "primary", "danger", "special"]
          }
        }
      }
    },
    "requiredFlags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "requiredItems": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "ending": {
      "oneOf": [
        {
          "type": "boolean"
        },
        {
          "type": "object",
          "required": ["type"],
          "properties": {
            "type": {
              "type": "string"
            },
            "title": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "achievementId": {
              "type": "string"
            }
          }
        }
      ]
    },
    "act": {
      "type": "integer"
    },
    "hub": {
      "type": "integer"
    },
    "implementationStatus": {
      "type": "string",
      "enum": ["pending", "draft", "complete", "reviewed"]
    },
    "metadata": {
      "type": "object"
    },
    "npcs": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "flags": {
      "type": "object"
    }
  },
  "$defs": {
    "condition": {
      "oneOf": [
        {
          "type": "object",
          "required": ["type"],
          "properties": {
            "type": {
              "const": "stat_check"
            },
            "stat": {
              "type": "string"
            },
            "statId": {
              "type": "string"
            },
            "op": {
              "type": "string",
              "enum": ["gte", "lte", "gt", "lt", "eq"]
            },
            "operator": {
              "type": "string",
              "enum": ["gte", "lte", "gt", "lt", "eq"]
            },
            "value": {
              "type": "number"
            }
          }
        },
        {
          "type": "object",
          "required": ["type", "flag"],
          "properties": {
            "type": {
              "const": "flag_check"
            },
            "flag": {
              "type": "string"
            }
          }
        },
        {
          "type": "object",
          "required": ["type", "item"],
          "properties": {
            "type": {
              "const": "has_item"
            },
            "item": {
              "type": "string"
            }
          }
        },
        {
          "type": "object",
          "required": ["type", "faction"],
          "properties": {
            "type": {
              "const": "faction_check"
            },
            "faction": {
              "type": "string"
            },
            "level": {
              "type": "integer"
            }
          }
        },
        {
          "type": "object",
          "required": ["type", "sceneId"],
          "properties": {
            "type": {
              "const": "visited"
            },
            "sceneId": {
              "type": "string"
            },
            "count": {
              "type": "integer",
              "minimum": 1,
              "default": 1
            }
          }
        },
        {
          "type": "object",
          "required": ["type", "choiceId"],
          "properties": {
            "type": {
              "const": "choice_made"
            },
            "choiceId": {
              "type": "string"
            }
          }
        },
        {
          "type": "object",
          "required": ["type", "conditions"],
          "properties": {
            "type": {
              "const": "AND"
            },
            "conditions": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/condition"
              },
              "minItems": 1
            }
          }
        },
        {
          "type": "object",
          "required": ["type", "conditions"],
          "properties": {
            "type": {
              "const": "OR"
            },
            "conditions": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/condition"
              },
              "minItems": 1
            }
          }
        },
        {
          "type": "object",
          "required": ["type", "conditions"],
          "properties": {
            "type": {
              "const": "NOT"
            },
            "conditions": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/condition"
              },
              "minItems": 1,
              "maxItems": 1
            }
          }
        }
      ]
    },
    "effect": {
      "oneOf": [
        {
          "type": "object",
          "required": ["type", "flag"],
          "properties": {
            "type": {
              "const": "set_flag"
            },
            "flag": {
              "type": "string"
            }
          }
        },
        {
          "type": "object",
          "required": ["type", "flag"],
          "properties": {
            "type": {
              "const": "clear_flag"
            },
            "flag": {
              "type": "string"
            }
          }
        },
        {
          "type": "object",
          "required": ["type", "item"],
          "properties": {
            "type": {
              "const": "add_item"
            },
            "item": {
              "type": "string"
            },
            "quantity": {
              "type": "integer",
              "minimum": 1,
              "default": 1
            }
          }
        },
        {
          "type": "object",
          "required": ["type", "item"],
          "properties": {
            "type": {
              "const": "remove_item"
            },
            "item": {
              "type": "string"
            },
            "quantity": {
              "type": "integer",
              "minimum": 1,
              "default": 1
            }
          }
        },
        {
          "type": "object",
          "required": ["type", "stat", "value"],
          "properties": {
            "type": {
              "const": "set_stat"
            },
            "stat": {
              "type": "string"
            },
            "value": {
              "type": "number"
            }
          }
        },
        {
          "type": "object",
          "required": ["type", "stat", "value"],
          "properties": {
            "type": {
              "const": "modify_stat"
            },
            "stat": {
              "type": "string"
            },
            "value": {
              "type": "number"
            }
          }
        },
        {
          "type": "object",
          "required": ["type", "sceneId"],
          "properties": {
            "type": {
              "const": "goto"
            },
            "sceneId": {
              "type": "string",
              "pattern": "^(sc_|bk_)[a-z0-9_-]+$"
            }
          }
        },
        {
          "type": "object",
          "required": ["type", "faction"],
          "properties": {
            "type": {
              "const": "modify_faction"
            },
            "faction": {
              "type": "string"
            },
            "value": {
              "type": "integer"
            },
            "amount": {
              "type": "integer"
            }
          }
        }
      ]
    }
  }
}
