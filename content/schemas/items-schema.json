{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/adrianleb/gamebook-web2/content/schemas/items-schema.json",
  "title": "Gamebook Items Catalog",
  "description": "Item definitions for inventory system. Categories and properties are arrays. Items are grouped by act/section (vertical_slice, act1, act2_faction, etc.) with each group containing an array of items.",
  "type": "object",
  "required": ["categories", "properties", "items"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "source": {
      "type": "string"
    },
    "designNotes": {
      "type": "object",
      "properties": {
        "maxCarryLimit": {
          "type": "integer"
        },
        "atCapacityBehavior": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "plotCriticalCannotDrop": {
          "type": "boolean"
        }
      }
    },
    "categories": {
      "type": "array",
      "description": "Item category definitions (array of category objects)",
      "items": {
        "type": "object",
        "required": ["id", "name", "description", "examples"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z_]+$",
            "description": "Category identifier"
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "Display name"
          },
          "description": {
            "type": "string",
            "description": "What this category represents"
          },
          "examples": {
            "type": "array",
            "description": "Example items in this category",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "properties": {
      "type": "array",
      "description": "Item property definitions (array of property objects)",
      "items": {
        "type": "object",
        "required": ["id", "name", "description"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z_]+$"
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string"
          }
        }
      }
    },
    "items": {
      "type": "object",
      "description": "Catalog of items grouped by act/section. Each group is an array of item objects. Also includes 'combinations' array for item combination recipes.",
      "additionalProperties": {
        "oneOf": [
          {
            "type": "array",
            "description": "Array of items in this group (e.g., vertical_slice, act1, act2_faction, etc.)",
            "items": {
              "type": "object",
              "required": ["id", "name", "category"],
              "properties": {
                "id": {
                  "type": "string",
                  "pattern": "^[a-z_]+$",
                  "description": "Unique item identifier"
                },
                "name": {
                  "type": "string",
                  "minLength": 1,
                  "description": "Display name"
                },
                "category": {
                  "type": "string",
                  "description": "Must reference an id in the categories array"
                },
                "properties": {
                  "type": "array",
                  "description": "Array of property IDs from the properties array",
                  "items": {
                    "type": "string"
                  }
                },
                "description": {
                  "type": "string",
                  "description": "Item description shown in inventory"
                },
                "effect": {
                  "type": "string",
                  "description": "What the item does"
                },
                "faction": {
                  "type": "string",
                  "description": "Associated faction (for faction tokens)"
                },
                "requirement": {
                  "type": "string",
                  "description": "Flag or condition required to acquire"
                },
                "source": {
                  "type": "string",
                  "description": "Where this item comes from"
                }
              }
            }
          },
          {
            "type": "array",
            "description": "Array of item combination recipes (only for 'combinations' key)",
            "items": {
              "type": "object",
              "required": ["id", "name", "items", "effect"],
              "properties": {
                "id": {
                  "type": "string",
                  "pattern": "^[a-z_]+$"
                },
                "name": {
                  "type": "string",
                  "minLength": 1
                },
                "items": {
                  "type": "array",
                  "description": "Item IDs that combine to form this recipe",
                  "items": {
                    "type": "string"
                  }
                },
                "effect": {
                  "type": "string"
                }
              }
            }
          }
        ]
      }
    },
    "startingItems": {
      "type": "object",
      "description": "Items granted to player at game start",
      "additionalProperties": {
        "type": "integer",
        "minimum": 1,
        "description": "Quantity (key is item ID)"
      }
    }
  }
}
