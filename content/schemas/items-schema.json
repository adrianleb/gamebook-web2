{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/adrianleb/gamebook-web2/content/schemas/items-schema.json",
  "title": "Gamebook Items Catalog",
  "description": "Item definitions for inventory system using grouped array structure by act/section",
  "type": "object",
  "required": ["items", "categories"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "source": {
      "type": "string"
    },
    "designNotes": {
      "type": "object",
      "properties": {
        "maxCarryLimit": {
          "type": "integer"
        },
        "atCapacityBehavior": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "plotCriticalCannotDrop": {
          "type": "boolean"
        }
      }
    },
    "categories": {
      "type": "array",
      "description": "Item category definitions as array",
      "items": {
        "type": "object",
        "required": ["id", "name"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9_-]+$"
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string"
          },
          "examples": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "properties": {
      "type": "array",
      "description": "Item property definitions as array",
      "items": {
        "type": "object",
        "required": ["id", "name", "description"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9_-]+$"
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string"
          }
        }
      }
    },
    "items": {
      "type": "object",
      "description": "Item groups organized by act/section, each containing an array of items",
      "properties": {
        "vertical_slice": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/item"
          }
        },
        "act1": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/item"
          }
        },
        "act2_faction": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/item"
          }
        },
        "act2_archives": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/item"
          }
        },
        "act2_relationship": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/item"
          }
        },
        "act3": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/item"
          }
        },
        "combinations": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/combination"
          }
        }
      }
    },
    "startingItems": {
      "type": "object",
      "description": "Items granted to player at game start",
      "additionalProperties": {
        "type": "integer",
        "minimum": 1,
        "description": "Quantity (key is item ID)"
      }
    }
  },
  "$defs": {
    "item": {
      "type": "object",
      "required": ["id", "name", "category"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9_-]+$",
          "description": "Unique item identifier"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Display name"
        },
        "category": {
          "type": "string",
          "description": "Must reference an id in the categories array"
        },
        "properties": {
          "type": "array",
          "description": "Item properties from the properties array",
          "items": {
            "type": "string"
          }
        },
        "description": {
          "type": "string",
          "description": "Item description shown in inventory"
        },
        "effect": {
          "type": "string",
          "description": "What the item does"
        },
        "faction": {
          "type": "string",
          "description": "Faction alignment for faction-specific items"
        },
        "requirement": {
          "type": "string",
          "description": "Required flag or relationship to acquire"
        },
        "source": {
          "type": "string",
          "description": "Where the item comes from"
        }
      }
    },
    "combination": {
      "type": "object",
      "required": ["id", "name", "items", "effect"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9_-]+$"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "items": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 2
        },
        "effect": {
          "type": "string"
        }
      }
    }
  }
}
