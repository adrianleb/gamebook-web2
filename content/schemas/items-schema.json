{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/adrianleb/gamebook-web2/content/schemas/items-schema.json",
  "title": "Gamebook Items Catalog",
  "description": "Item definitions for inventory system including categories, properties, and combination rules. Items are organized by narrative progression (vertical_slice, act1, act2_faction, act2_archives, act2_relationship, act3, combinations).",
  "type": "object",
  "required": ["categories", "properties", "items"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "source": {
      "type": "string"
    },
    "designNotes": {
      "type": "object",
      "properties": {
        "maxCarryLimit": {
          "type": "integer"
        },
        "atCapacityBehavior": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "plotCriticalCannotDrop": {
          "type": "boolean"
        }
      }
    },
    "categories": {
      "type": "array",
      "description": "Item category definitions (prop, script, token, key, artifact)",
      "items": {
        "type": "object",
        "required": ["id", "name", "description"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9_]+$",
            "description": "Unique category identifier"
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "Display name"
          },
          "description": {
            "type": "string",
            "description": "Category description"
          },
          "examples": {
            "type": "array",
            "description": "Example items for this category",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "properties": {
      "type": "array",
      "description": "Item property definitions (consumable, plot_critical, hidden, cursed)",
      "items": {
        "type": "object",
        "required": ["id", "name", "description"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9_]+$"
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string"
          }
        }
      }
    },
    "items": {
      "type": "object",
      "description": "Catalog of all items organized by narrative category. Keys: vertical_slice, act1, act2_faction, act2_archives, act2_relationship, act3, combinations",
      "additionalProperties": {
        "type": "array",
        "description": "Array of item definitions for this narrative category"
      }
    }
  },
  "allOf": [
    {
      "if": {
        "type": "object",
        "required": ["items"],
        "properties": {
          "items": {
            "type": "object",
            "required": ["vertical_slice", "act1", "act2_faction", "act2_archives", "act2_relationship", "act3", "combinations"]
          }
        }
      },
      "then": {
        "properties": {
          "items": {
            "properties": {
              "vertical_slice": {
                "type": "array",
                "items": { "$ref": "#/$defs/regularItem" }
              },
              "act1": {
                "type": "array",
                "items": { "$ref": "#/$defs/regularItem" }
              },
              "act2_faction": {
                "type": "array",
                "items": { "$ref": "#/$defs/regularItem" }
              },
              "act2_archives": {
                "type": "array",
                "items": { "$ref": "#/$defs/regularItem" }
              },
              "act2_relationship": {
                "type": "array",
                "items": { "$ref": "#/$defs/regularItem" }
              },
              "act3": {
                "type": "array",
                "items": { "$ref": "#/$defs/regularItem" }
              },
              "combinations": {
                "type": "array",
                "items": { "$ref": "#/$defs/combinationItem" }
              }
            }
          }
        }
      }
    }
  ],
  "$defs": {
    "regularItem": {
      "type": "object",
      "required": ["id", "name", "category", "properties"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9_]+$",
          "description": "Unique item identifier"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Display name"
        },
        "category": {
          "type": "string",
          "description": "Must reference a category id from the categories array"
        },
        "properties": {
          "type": "array",
          "description": "Array of property IDs applied to this item",
          "items": {
            "type": "string"
          }
        },
        "description": {
          "type": "string",
          "description": "Item description shown in inventory"
        },
        "effect": {
          "type": "string",
          "description": "What the item does when used or equipped"
        },
        "faction": {
          "type": "string",
          "enum": ["preservationist", "exiter", "revisionist", "independent"],
          "description": "Associated faction (for faction items)"
        },
        "requirement": {
          "type": "string",
          "description": "Flag requirement to acquire or use this item"
        },
        "source": {
          "type": "string",
          "description": "Narrative source of the item"
        }
      }
    },
    "combinationItem": {
      "type": "object",
      "required": ["id", "name", "items", "effect"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9_]+$",
          "description": "Unique combination identifier"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Combination display name"
        },
        "items": {
          "type": "array",
          "description": "Component item IDs",
          "items": {
            "type": "string"
          }
        },
        "effect": {
          "type": "string",
          "description": "Result of the combination"
        }
      }
    }
  }
}
