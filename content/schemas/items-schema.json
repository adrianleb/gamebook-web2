{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/adrianleb/gamebook-web2/content/schemas/items-schema.json",
  "title": "Gamebook Items Catalog",
  "description": "Item definitions for inventory system using array-based grouped structure for modular content loading",
  "type": "object",
  "required": ["categories", "properties", "items"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "description": {
      "type": "string",
      "description": "Item catalog description"
    },
    "version": {
      "type": "string",
      "description": "Schema version"
    },
    "source": {
      "type": "string",
      "description": "Source document URL"
    },
    "designNotes": {
      "type": "object",
      "description": "Game design notes for item system behavior",
      "properties": {
        "maxCarryLimit": {
          "type": "integer",
          "description": "Maximum number of items player can carry"
        },
        "atCapacityBehavior": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Behavior when inventory is full"
        },
        "plotCriticalCannotDrop": {
          "type": "boolean",
          "description": "Whether plot-critical items cannot be dropped"
        }
      }
    },
    "categories": {
      "type": "array",
      "description": "Item category definitions as an array (for ordered display)",
      "items": {
        "type": "object",
        "required": ["id", "name"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9_-]+$",
            "description": "Unique category identifier"
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "Display name"
          },
          "description": {
            "type": "string",
            "description": "Category description"
          },
          "examples": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Example items in this category"
          }
        }
      }
    },
    "properties": {
      "type": "array",
      "description": "Item property definitions (flags that modify item behavior)",
      "items": {
        "type": "object",
        "required": ["id", "name", "description"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9_-]+$"
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string"
          }
        }
      }
    },
    "items": {
      "type": "object",
      "description": "Item catalog organized by act/section for modular content loading",
      "properties": {
        "combinations": {
          "type": "array",
          "description": "Item combination recipes (nested under items for data organization)",
          "items": {
            "type": "object",
            "required": ["id", "name", "items", "effect"],
            "properties": {
              "id": {
                "type": "string",
                "pattern": "^[a-z0-9_-]+$"
              },
              "name": {
                "type": "string",
                "minLength": 1
              },
              "items": {
                "type": "array",
                "description": "Array of item IDs that combine",
                "items": {
                  "type": "string"
                },
                "minItems": 2
              },
              "effect": {
                "type": "string",
                "description": "Result of the combination"
              }
            }
          }
        }
      },
      "additionalProperties": {
        "type": "array",
        "description": "Array of items in this group (e.g., vertical_slice, act1, act2_faction, etc.)",
        "items": {
          "type": "object",
          "required": ["id", "name", "category"],
          "properties": {
            "id": {
              "type": "string",
              "pattern": "^[a-z0-9_-]+$",
              "description": "Unique item identifier"
            },
            "name": {
              "type": "string",
              "minLength": 1,
              "description": "Display name"
            },
            "category": {
              "type": "string",
              "description": "Must reference an id from the categories array"
            },
            "properties": {
              "type": "array",
              "description": "Array of property IDs from the properties array",
              "items": {
                "type": "string"
              }
            },
            "description": {
              "type": "string",
              "description": "Item description shown in inventory"
            },
            "effect": {
              "type": "string",
              "description": "What the item does when used"
            },
            "faction": {
              "type": "string",
              "description": "Faction this item is associated with (if applicable)",
              "enum": ["preservationist", "exiter", "revisionist", "independent"]
            },
            "requirement": {
              "type": "string",
              "description": "Flag or condition required to acquire this item"
            },
            "source": {
              "type": "string",
              "description": "Where this item comes from (narrative context)"
            }
          }
        }
      }
    },
    "combinations": {
      "type": "array",
      "description": "Item combination recipes (optional)",
      "items": {
        "type": "object",
        "required": ["id", "name", "items", "effect"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9_-]+$"
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "items": {
            "type": "array",
            "description": "Array of item IDs that combine",
            "items": {
              "type": "string"
            },
            "minItems": 2
          },
          "effect": {
            "type": "string",
            "description": "Result of the combination"
          }
        }
      }
    },
    "startingItems": {
      "type": "object",
      "description": "Items granted to player at game start",
      "additionalProperties": {
        "type": "integer",
        "minimum": 1,
        "description": "Quantity (key is item ID)"
      }
    }
  }
}
