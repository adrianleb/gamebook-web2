{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/adrianleb/gamebook-web2/content/schemas/stats-schema.json",
  "title": "Gamebook Stats System",
  "description": "Stat definitions, archetypes, check types, and difficulty thresholds for The Understage RPG mechanics",
  "type": "object",
  "required": ["stats", "archetypes", "checkThresholds", "difficultyCurve", "checkTypes"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "source": {
      "type": "string"
    },
    "designNotes": {
      "type": "object",
      "properties": {
        "totalStartingPoints": {
          "type": "integer"
        },
        "minimumPerStat": {
          "type": "integer"
        },
        "maximumPerStat": {
          "type": "integer"
        },
        "maxTotalPoints": {
          "type": "integer"
        },
        "maxAdditionalPoints": {
          "type": "integer"
        }
      }
    },
    "stats": {
      "type": "array",
      "description": "Core stat definitions (script, stage_presence, improv)",
      "items": {
        "type": "object",
        "required": ["id", "name", "description", "startingMin", "startingMax", "absoluteMax"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9_]+$",
            "description": "Unique stat identifier"
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "Display name"
          },
          "description": {
            "type": "string",
            "description": "Description shown in character sheet"
          },
          "highStatUnlocks": {
            "type": "array",
            "description": "What a high stat enables",
            "items": {
              "type": "string"
            }
          },
          "startingMin": {
            "type": "integer",
            "minimum": 0,
            "description": "Minimum starting value"
          },
          "startingMax": {
            "type": "integer",
            "description": "Maximum starting value"
          },
          "absoluteMax": {
            "type": "integer",
            "description": "Absolute maximum value"
          },
          "canDecrease": {
            "type": "boolean",
            "default": false,
            "description": "Whether this stat can decrease"
          }
        }
      }
    },
    "archetypes": {
      "type": "array",
      "description": "Character archetypes with default stat distributions",
      "items": {
        "type": "object",
        "required": ["name", "description", "distribution"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "Archetype name"
          },
          "description": {
            "type": "string",
            "description": "Archetype description"
          },
          "distribution": {
            "type": "object",
            "description": "Stat values for this archetype",
            "additionalProperties": {
              "type": "integer"
            }
          }
        }
      }
    },
    "checkThresholds": {
      "type": "array",
      "description": "Difficulty tier thresholds for stat checks",
      "items": {
        "type": "object",
        "required": ["tier", "threshold", "description"],
        "properties": {
          "tier": {
            "type": "string",
            "enum": ["Basic", "Standard", "Advanced", "Expert"]
          },
          "threshold": {
            "type": "integer",
            "minimum": 1
          },
          "description": {
            "type": "string"
          }
        }
      }
    },
    "difficultyCurve": {
      "type": "array",
      "description": "Expected stat progression and check distribution per act",
      "items": {
        "type": "object",
        "required": ["act", "expectedStats", "checkDistribution"],
        "properties": {
          "act": {
            "type": "integer",
            "minimum": 1,
            "maximum": 3
          },
          "expectedStats": {
            "type": "string",
            "description": "Expected stat range for this act"
          },
          "checkDistribution": {
            "type": "object",
            "description": "Probability distribution of check difficulties",
            "additionalProperties": {
              "type": "number"
            }
          }
        }
      }
    },
    "checkTypes": {
      "type": "array",
      "description": "Available check type definitions",
      "items": {
        "type": "object",
        "required": ["type", "description", "format"],
        "properties": {
          "type": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "format": {
            "type": "string",
            "description": "Format string for displaying this check"
          },
          "example": {
            "type": "string"
          },
          "tiers": {
            "type": "object",
            "description": "Tier-specific outcomes (for archive_search)",
            "additionalProperties": {
              "type": "string"
            }
          }
        }
      }
    },
    "effectiveBonuses": {
      "type": "object",
      "description": "Temporary stat bonuses from flags, items, or NPC relationships",
      "properties": {
        "description": {
          "type": "string"
        },
        "format": {
          "type": "string"
        },
        "maxEffectiveBonus": {
          "type": "integer"
        },
        "examples": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "bonus": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
