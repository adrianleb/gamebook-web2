{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/adrianleb/gamebook-web2/content/schemas/stats-schema.json",
  "title": "Gamebook Stats System",
  "description": "Stat definitions, archetypes, and check types for The Understage RPG mechanics using array-based structure",
  "type": "object",
  "required": ["stats", "archetypes"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "description": {
      "type": "string",
      "description": "Stats system description"
    },
    "version": {
      "type": "string",
      "description": "Schema version"
    },
    "source": {
      "type": "string",
      "description": "Source document URL"
    },
    "designNotes": {
      "type": "object",
      "description": "Game design notes for stat system behavior",
      "properties": {
        "totalStartingPoints": {
          "type": "integer",
          "description": "Total points available at character creation"
        },
        "minimumPerStat": {
          "type": "integer",
          "description": "Minimum value allowed per stat"
        },
        "maximumPerStat": {
          "type": "integer",
          "description": "Maximum value allowed per stat at creation"
        },
        "maxTotalPoints": {
          "type": "integer",
          "description": "Maximum total points across all stats"
        },
        "maxAdditionalPoints": {
          "type": "integer",
          "description": "Additional points that can be gained during play"
        }
      }
    },
    "stats": {
      "type": "array",
      "description": "All stat definitions as an array",
      "items": {
        "type": "object",
        "required": ["id", "name", "description"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9_]+$",
            "description": "Unique stat identifier"
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "Display name"
          },
          "description": {
            "type": "string",
            "description": "Description shown in character sheet"
          },
          "highStatUnlocks": {
            "type": "array",
            "description": "What a high value in this stat enables",
            "items": {
              "type": "string"
            }
          },
          "startingMin": {
            "type": "integer",
            "description": "Minimum starting value"
          },
          "startingMax": {
            "type": "integer",
            "description": "Maximum starting value"
          },
          "absoluteMax": {
            "type": "integer",
            "description": "Absolute maximum value (including gains)"
          },
          "canDecrease": {
            "type": "boolean",
            "description": "Whether this stat can decrease during play"
          }
        }
      }
    },
    "archetypes": {
      "type": "array",
      "description": "Character archetypes with default stat distributions",
      "items": {
        "type": "object",
        "required": ["name", "description", "distribution"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "Archetype name"
          },
          "description": {
            "type": "string",
            "description": "Archetype description"
          },
          "distribution": {
            "type": "object",
            "description": "Stat values for this archetype (keys are stat IDs)",
            "additionalProperties": {
              "type": "integer"
            }
          }
        }
      }
    },
    "checkThresholds": {
      "type": "array",
      "description": "Check difficulty tiers and thresholds",
      "items": {
        "type": "object",
        "required": ["tier", "threshold", "description"],
        "properties": {
          "tier": {
            "type": "string",
            "description": "Tier name (e.g., Basic, Standard, Advanced, Expert)"
          },
          "threshold": {
            "type": "integer",
            "description": "Stat value required for this tier"
          },
          "description": {
            "type": "string",
            "description": "Description of what this tier means"
          }
        }
      }
    },
    "difficultyCurve": {
      "type": "array",
      "description": "Expected stat values and check distribution by act",
      "items": {
        "type": "object",
        "required": ["act", "expectedStats", "checkDistribution"],
        "properties": {
          "act": {
            "type": "integer",
            "description": "Act number (1, 2, or 3)"
          },
          "expectedStats": {
            "type": "string",
            "description": "Expected stat range for this act"
          },
          "checkDistribution": {
            "type": "object",
            "description": "Probability distribution of check difficulties",
            "additionalProperties": {
              "type": "number"
            }
          }
        }
      }
    },
    "checkTypes": {
      "type": "array",
      "description": "Check type definitions for stat tests",
      "items": {
        "type": "object",
        "required": ["type", "description", "format"],
        "properties": {
          "type": {
            "type": "string",
            "description": "Unique check type identifier"
          },
          "description": {
            "type": "string",
            "description": "How this check type works"
          },
          "format": {
            "type": "string",
            "description": "Display format for this check type"
          },
          "example": {
            "type": "string",
            "description": "Example of this check type"
          },
          "tiers": {
            "type": "object",
            "description": "Tier-specific outcomes (for tiered checks like archive_search)",
            "additionalProperties": {
              "type": "string"
            }
          }
        }
      }
    },
    "effectiveBonuses": {
      "type": "object",
      "description": "Temporary stat bonuses from flags, items, or NPC relationships",
      "properties": {
        "description": {
          "type": "string"
        },
        "format": {
          "type": "string"
        },
        "maxEffectiveBonus": {
          "type": "integer",
          "description": "Maximum effective bonus allowed"
        },
        "examples": {
          "type": "array",
          "description": "Example effective bonuses",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "bonus": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "difficultyTiers": {
      "type": "object",
      "description": "Difficulty thresholds for stat checks (optional, for compatibility)",
      "properties": {
        "easy": {
          "type": "integer",
          "description": "DC for easy checks"
        },
        "medium": {
          "type": "integer",
          "description": "DC for medium checks"
        },
        "hard": {
          "type": "integer",
          "description": "DC for hard checks"
        },
        "extreme": {
          "type": "integer",
          "description": "DC for extreme checks"
        }
      }
    },
    "checkFormat": {
      "type": "string",
      "enum": ["d20", "d100", "dice_pool", "static"],
      "description": "Default check mechanic: d20+stat, d00-under, pool counting 5+, or static comparison",
      "default": "d20"
    },
    "checks": {
      "type": "object",
      "description": "Check type definitions for stat tests (optional, for compatibility)",
      "additionalProperties": {
        "type": "object",
        "required": ["id", "name", "stat"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9_]+$"
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "stat": {
            "type": "string",
            "description": "Primary stat used for this check"
          },
          "secondaryStat": {
            "type": "string",
            "description": "Optional secondary stat that adds bonus"
          },
          "difficulty": {
            "type": "string",
            "enum": ["easy", "medium", "hard", "extreme"],
            "default": "medium",
            "description": "Base difficulty tier"
          },
          "formula": {
            "type": "string",
            "description": "Custom formula (e.g., 'stat + d20 >= difficulty')"
          },
          "flavor": {
            "type": "object",
            "description": "Flavor text by outcome tier",
            "properties": {
              "criticalSuccess": {
                "type": "string"
              },
              "success": {
                "type": "string"
              },
              "failure": {
                "type": "string"
              },
              "criticalFailure": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
