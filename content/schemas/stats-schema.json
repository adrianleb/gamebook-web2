{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/adrianleb/gamebook-web2/content/schemas/stats-schema.json",
  "title": "Gamebook Stats System",
  "description": "Stat definitions, archetypes, and check types for The Understage RPG mechanics using array-based structure",
  "type": "object",
  "required": ["stats", "archetypes"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "source": {
      "type": "string"
    },
    "designNotes": {
      "type": "object",
      "properties": {
        "totalStartingPoints": {
          "type": "integer"
        },
        "minimumPerStat": {
          "type": "integer"
        },
        "maximumPerStat": {
          "type": "integer"
        },
        "maxTotalPoints": {
          "type": "integer"
        },
        "maxAdditionalPoints": {
          "type": "integer"
        }
      }
    },
    "stats": {
      "type": "array",
      "description": "All stat definitions as array",
      "items": {
        "type": "object",
        "required": ["id", "name", "description"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9_]+$",
            "description": "Unique stat identifier"
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "Display name"
          },
          "description": {
            "type": "string",
            "description": "Description shown in character sheet"
          },
          "highStatUnlocks": {
            "type": "array",
            "description": "What high stat values enable",
            "items": {
              "type": "string"
            }
          },
          "startingMin": {
            "type": "integer",
            "description": "Minimum starting value"
          },
          "startingMax": {
            "type": "integer",
            "description": "Maximum starting value"
          },
          "absoluteMax": {
            "type": "integer",
            "description": "Absolute maximum value"
          },
          "canDecrease": {
            "type": "boolean",
            "description": "Whether stat can decrease below starting value"
          }
        }
      }
    },
    "archetypes": {
      "type": "array",
      "description": "Character archetypes as array",
      "items": {
        "type": "object",
        "required": ["name", "description", "distribution"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string"
          },
          "distribution": {
            "type": "object",
            "description": "Stat values for this archetype (keys match stats)",
            "additionalProperties": {
              "type": "integer"
            }
          }
        }
      }
    },
    "checkThresholds": {
      "type": "array",
      "description": "Check threshold tiers",
      "items": {
        "type": "object",
        "required": ["tier", "threshold", "description"],
        "properties": {
          "tier": {
            "type": "string"
          },
          "threshold": {
            "type": "integer"
          },
          "description": {
            "type": "string"
          }
        }
      }
    },
    "difficultyCurve": {
      "type": "array",
      "description": "Difficulty progression by act",
      "items": {
        "type": "object",
        "required": ["act", "expectedStats", "checkDistribution"],
        "properties": {
          "act": {
            "type": "integer"
          },
          "expectedStats": {
            "type": "string"
          },
          "checkDistribution": {
            "type": "object",
            "additionalProperties": {
              "type": "number"
            }
          }
        }
      }
    },
    "checkTypes": {
      "type": "array",
      "description": "Check type definitions",
      "items": {
        "type": "object",
        "required": ["type", "description", "format"],
        "properties": {
          "type": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "format": {
            "type": "string"
          },
          "example": {
            "type": "string"
          },
          "tiers": {
            "type": "object",
            "additionalProperties": {
              "type": "string"
            }
          }
        }
      }
    },
    "effectiveBonuses": {
      "type": "object",
      "description": "Temporary stat bonuses from flags, items, or NPC relationships",
      "properties": {
        "description": {
          "type": "string"
        },
        "format": {
          "type": "string"
        },
        "maxEffectiveBonus": {
          "type": "integer"
        },
        "examples": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "bonus": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
