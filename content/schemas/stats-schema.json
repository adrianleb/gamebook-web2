{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/adrianleb/gamebook-web2/content/schemas/stats-schema.json",
  "title": "Gamebook Stats System",
  "description": "Stat definitions, archetypes, and check types for The Understage RPG mechanics. Uses array-based structure for stats, archetypes, and check types. Checks are optional.",
  "type": "object",
  "required": ["stats", "archetypes"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "source": {
      "type": "string"
    },
    "designNotes": {
      "type": "object",
      "properties": {
        "totalStartingPoints": {
          "type": "integer"
        },
        "minimumPerStat": {
          "type": "integer"
        },
        "maximumPerStat": {
          "type": "integer"
        },
        "maxTotalPoints": {
          "type": "integer"
        },
        "maxAdditionalPoints": {
          "type": "integer"
        }
      }
    },
    "stats": {
      "type": "array",
      "description": "Array of stat definitions (not keyed by ID)",
      "items": {
        "type": "object",
        "required": ["id", "name", "description"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z_]+$",
            "description": "Unique stat identifier"
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "Display name"
          },
          "description": {
            "type": "string",
            "description": "What this stat represents"
          },
          "highStatUnlocks": {
            "type": "array",
            "description": "What high values of this stat enable",
            "items": {
              "type": "string"
            }
          },
          "startingMin": {
            "type": "integer",
            "description": "Minimum starting value"
          },
          "startingMax": {
            "type": "integer",
            "description": "Maximum starting value"
          },
          "absoluteMax": {
            "type": "integer",
            "description": "Absolute maximum value"
          },
          "canDecrease": {
            "type": "boolean",
            "description": "Whether this stat can decrease during gameplay"
          }
        }
      }
    },
    "archetypes": {
      "type": "array",
      "description": "Character archetypes with default stat distributions (array of archetype objects)",
      "items": {
        "type": "object",
        "required": ["name", "description", "distribution"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string"
          },
          "distribution": {
            "type": "object",
            "description": "Stat values for this archetype (keys match stat IDs)",
            "additionalProperties": {
              "type": "integer"
            }
          }
        }
      }
    },
    "checkThresholds": {
      "type": "array",
      "description": "Check difficulty tiers with thresholds",
      "items": {
        "type": "object",
        "required": ["tier", "threshold", "description"],
        "properties": {
          "tier": {
            "type": "string"
          },
          "threshold": {
            "type": "integer"
          },
          "description": {
            "type": "string"
          }
        }
      }
    },
    "difficultyCurve": {
      "type": "array",
      "description": "Expected stat ranges and check distribution by act",
      "items": {
        "type": "object",
        "required": ["act", "expectedStats", "checkDistribution"],
        "properties": {
          "act": {
            "type": "integer"
          },
          "expectedStats": {
            "type": "string"
          },
          "checkDistribution": {
            "type": "object",
            "additionalProperties": {
              "type": "number"
            }
          }
        }
      }
    },
    "checkTypes": {
      "type": "array",
      "description": "Check type definitions (array of check type objects)",
      "items": {
        "type": "object",
        "required": ["type", "description", "format"],
        "properties": {
          "type": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "format": {
            "type": "string"
          },
          "example": {
            "type": "string"
          },
          "tiers": {
            "type": "object",
            "description": "Tier-specific outcomes for archive_search checks",
            "additionalProperties": {
              "type": "string"
            }
          }
        }
      }
    },
    "checks": {
      "type": "object",
      "description": "Legacy check definitions (optional, not used in current stats.json)",
      "additionalProperties": {
        "type": "object"
      }
    },
    "effectiveBonuses": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "format": {
          "type": "string"
        },
        "maxEffectiveBonus": {
          "type": "integer"
        },
        "examples": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "bonus": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "difficultyTiers": {
      "type": "object",
      "description": "Legacy difficulty tier definitions (optional)",
      "properties": {
        "easy": {
          "type": "integer"
        },
        "medium": {
          "type": "integer"
        },
        "hard": {
          "type": "integer"
        },
        "extreme": {
          "type": "integer"
        }
      }
    },
    "checkFormat": {
      "type": "string",
      "enum": ["d20", "d100", "dice_pool", "static"],
      "description": "Default check mechanic (optional)"
    }
  }
}
