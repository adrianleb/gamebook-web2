    "author": "agent-e",
    "version": "1.0"
  },
  "startingState": {
    "flags": ["game_started", "act1_complete", "act2_complete"],
    "inventory": [],
    "stats": {
      "health": 10,
      "courage": 5,
      "insight": 3
    },
    "factions": {
      "preservationist": 2,
      "revisionist": 7,
      "exiter": 1,
      "independent": 2
    },
    "currentScene": "sc_3_4_098",
    "editorState": "defeated"
  },
  "steps": [
    {
      "sequence": 1,
      "action": "checkpoint",
      "description": "Arrived at Last Curtain Call with high revisionist alignment",
      "assertions": {
        "flagsSet": ["game_started", "act1_complete", "act2_complete"],
