    "author": "agent-e",
    "version": "1.0"
  },
  "startingState": {
    "flags": ["green_room_reached", "QUEST_MISSING_SCRIPT_STARTED", "MET_CONSERVATOR"],
    "inventory": ["archival_ticket"],
    "stats": {
