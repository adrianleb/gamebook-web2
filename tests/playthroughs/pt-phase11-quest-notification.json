  "steps": [
    {
      "sequence": 1,
      "action": "checkpoint",
      "description": "Verify starting state - quest started, have archival_ticket",
      "assertions": {
        "flagsSet": ["green_room_reached", "QUEST_MISSING_SCRIPT_STARTED", "MET_CONSERVATOR"],
        "inventoryContains": ["archival_ticket"],
        "factions": {
          "preservationist": 1
