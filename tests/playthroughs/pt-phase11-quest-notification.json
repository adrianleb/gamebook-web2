          "preservationist": 3
        },
        "eventsExpected": [
          {
            "type": "effect-applied",
            "path": "flags.QUEST_MISSING_SCRIPT_COMPLETE",
            "newValue": true,
            "minCount": 1
          },
          {
            "type": "effect-applied",
            "path": "factions.preservationist",
            "minCount": 1
          },
          {
            "type": "effect-applied",
            "path": "inventory.sealed_archive_key",
            "minCount": 1
          }
        ]
      }
    }
  ],
  "endingCriteria": {
    "sceneId": "sc_2_2_031",
    "flagsRequired": ["QUEST_MISSING_SCRIPT_COMPLETE"],
    "inventoryRequired": ["sealed_archive_key"],
