{
  "$schema": "../../src/engine/headless-schema.json",
  "meta": {
    "name": "PT-VS-004",
    "description": "Stat Check Failure Path - Tests stat check mechanics, failure branch",
    "author": "agent-e",
    "version": "1.1"
  },
  "startingState": {
    "flags": [],
    "inventory": ["booth_key"],
    "stats": {
      "script": 2,
      "stage_presence": 2,
      "improv": 2
    },
    "currentScene": "sc_1_0_001"
  },
  "steps": [
    {
      "sequence": 1,
      "action": "checkpoint",
      "description": "Starting with booth_key and low stage_presence=2 (below threshold 3)",
      "assertions": {
        "inventoryContains": ["booth_key"],
        "stats": { "script": 2, "stage_presence": 2, "improv": 2 }
      }
    },
    {
      "sequence": 2,
      "action": "choose",
      "choiceIndex": 1,
      "description": "Choose 'Attempt the iron door' (has key)",
      "expectedScene": "sc_1_0_003",
      "checkpoint": true,
      "assertions": {
        "inventoryContains": ["booth_key"],
        "currentScene": "sc_1_0_003",
        "stats": { "script": 2, "stage_presence": 2, "improv": 2 }
      }
    },
    {
      "sequence": 3,
      "action": "checkpoint",
      "description": "At threshold - 'Step into the darkness' should be disabled (stage_presence 2 < threshold 3)",
      "assertions": {
        "stats": { "script": 2, "stage_presence": 2, "improv": 2 },
        "choicesAvailable": 1,
        "disabledChoicesValidated": true
      }
    },
    {
      "sequence": 4,
      "action": "choose",
      "choiceIndex": 3,
      "description": "Only choice: 'Turn back' (failure path - cannot cross)",
      "expectedScene": "sc_1_0_001",
      "checkpoint": true,
      "assertions": {
        "currentScene": "sc_1_0_001"
      }
    }
  ],
  "endingCriteria": {
    "sceneId": "sc_1_0_001",
    "flagsRequired": ["location_booth_visited"],
    "inventoryRequired": ["booth_key"],
    "statsRequired": {
      "script": 2,
      "stage_presence": 2,
      "improv": 2
    }
  },
  "softlockDetection": {
    "enabled": true,
    "maxSceneRevisits": 3,
    "failOnDetection": true
  },
  "notes": [
    "UPDATED: Migrated from legacy stats (courage→stage_presence, health/insight→script/improv).",
    "Stage presence check: threshold 3, player has 2 (below threshold).",
    "The attemptable stat check now uses onSuccess/onFailure branching.",
    "This test path expects the choice to be disabled when stats are below threshold."
  ]
}
