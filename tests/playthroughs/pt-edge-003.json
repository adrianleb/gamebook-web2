{
  "$schema": "../../src/engine/headless-schema.json",
  "meta": {
    "name": "PT-EDGE-003",
    "description": "Maximum Stats Navigation - Tests game is playable with maximum stat values",
    "author": "agent-e",
    "version": "1.0"
  },
  "startingState": {
    "flags": [],
    "inventory": ["booth_key"],
    "stats": {
      "script": 4,
      "stage_presence": 4,
      "improv": 4
    },
    "currentScene": "sc_1_0_001"
  },
  "steps": [
    {
      "sequence": 1,
      "action": "checkpoint",
      "description": "Verify starting state with maximum stats (stage_presence=4, improv=4)",
      "assertions": {
        "stats": { "stage_presence": 4, "improv": 4 },
        "inventoryContains": ["booth_key"],
        "choicesAvailable": 3
      }
    },
    {
      "sequence": 2,
      "action": "choose",
      "choiceIndex": 1,
      "description": "Choose 'Attempt the iron door' (has booth_key)",
      "expectedScene": "sc_1_0_003",
      "checkpoint": true,
      "assertions": {
        "currentScene": "sc_1_0_003",
        "stats": { "stage_presence": 4 }
      }
    },
    {
      "sequence": 3,
      "action": "checkpoint",
      "description": "At threshold - stage_presence check should pass (4 >= 3)",
      "assertions": {
        "stats": { "stage_presence": 4 },
        "choicesAvailable": 2
      }
    },
    {
      "sequence": 4,
      "action": "choose",
      "choiceIndex": 0,
      "description": "Choose 'Step into the darkness' (stage_presence check: 4 >= 3 = SUCCESS)",
      "expectedScene": "sc_1_1_099",
      "checkpoint": true,
      "assertions": {
        "currentScene": "sc_1_1_099",
        "stats": { "stage_presence": 4 }
      }
    }
  ],
  "endingCriteria": {
    "sceneId": "sc_1_1_099",
    "inventoryRequired": ["booth_key"],
    "statsRequired": {
      "script": 4,
      "stage_presence": 4,
      "improv": 4
    }
  },
  "softlockDetection": {
    "enabled": true,
    "maxSceneRevisits": 3,
    "failOnDetection": true
  }
}
