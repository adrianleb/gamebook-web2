{
  "$schema": "../../src/engine/headless-schema.json",
  "meta": {
    "name": "PT-SL-001",
    "description": "Scene Transition Save Point - Tests saving during scene transition, state restoration (to First Crossing)",
    "author": "agent-e",
    "version": "1.1"
  },
  "startingState": {
    "flags": [],
    "inventory": [],
    "stats": {
      "script": 2,
      "stage_presence": 2,
      "script": 2
    },
    "currentScene": "sc_1_0_001"
  },
  "steps": [
    {
      "sequence": 1,
      "action": "choose",
      "choiceIndex": 0,
      "description": "Choose 'Step through the opening to the right' (Go to the wings)",
      "expectedScene": "sc_1_0_002",
      "checkpoint": true,
      "assertions": {
        "flagsSet": ["path_direct"],
        "inventoryContains": ["wings_pass"],
        "currentScene": "sc_1_0_002"
      }
    },
    {
      "sequence": 2,
      "action": "save_snapshot",
      "snapshotName": "pt-sl-001-scene-transition",
      "description": "Save state at scene transition (sc_1_0_002)"
    },
    {
      "sequence": 3,
      "action": "choose",
      "choiceIndex": 0,
      "description": "Choose 'Continue toward the light' (reach First Crossing)",
      "expectedScene": "sc_1_1_099",
      "checkpoint": true,
      "assertions": {
        "currentScene": "sc_1_1_099",
        "flagsSet": ["act1_complete", "first_crossing_reached"]
      }
    },
    {
      "sequence": 4,
      "action": "load_snapshot",
      "snapshotName": "pt-sl-001-scene-transition",
      "description": "Load saved state - should return to sc_1_0_002",
      "assertions": {
        "flagsSet": ["path_direct"],
        "inventoryContains": ["wings_pass"],
        "currentScene": "sc_1_0_002"
      }
    }
  ],
  "endingCriteria": {
    "sceneId": "sc_1_0_002",
    "flagsRequired": ["path_direct"],
    "inventoryRequired": ["wings_pass"]
  },
  "softlockDetection": {
    "enabled": true,
    "maxSceneRevisits": 3,
    "failOnDetection": true
  }
}
