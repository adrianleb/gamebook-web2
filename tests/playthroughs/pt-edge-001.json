{
  "$schema": "../../src/engine/headless-schema.json",
  "meta": {
    "name": "PT-EDGE-001",
    "description": "Empty Inventory Navigation - Tests game is playable with empty inventory (direct path to First Crossing)",
    "author": "agent-e",
    "version": "1.1"
  },
  "startingState": {
    "flags": [],
    "inventory": [],
    "stats": {
      "health": 10,
      "courage": 5,
      "insight": 3
    },
    "currentScene": "sc_1_0_001"
  },
  "steps": [
    {
      "sequence": 1,
      "action": "checkpoint",
      "description": "Verify starting state with empty inventory",
      "assertions": {
        "inventoryExcludes": ["booth_key", "wings_pass"],
        "choicesAvailable": 3
      }
    },
    {
      "sequence": 2,
      "action": "checkpoint",
      "description": "Verify 'Attempt the iron door' is disabled without booth_key",
      "assertions": {
        "inventoryExcludes": ["booth_key"],
        "disabledChoicesValidated": true
      }
    },
    {
      "sequence": 3,
      "action": "choose",
      "choiceIndex": 0,
      "description": "Choose 'Step through the opening to the right' (direct path - no items required)",
      "expectedScene": "sc_1_0_002",
      "checkpoint": true,
      "assertions": {
        "inventoryContains": ["wings_pass"],
        "currentScene": "sc_1_0_002"
      }
    },
    {
      "sequence": 4,
      "action": "choose",
      "choiceIndex": 0,
      "description": "Choose 'Continue toward the light' (reach First Crossing)",
      "expectedScene": "sc_1_1_099",
      "checkpoint": true,
      "assertions": {
        "currentScene": "sc_1_1_099",
        "inventoryContains": ["wings_pass"],
        "flagsSet": ["act1_complete", "first_crossing_reached"]
      }
    }
  ],
  "endingCriteria": {
    "sceneId": "sc_1_1_099",
    "flagsRequired": ["path_direct", "act1_complete", "first_crossing_reached"],
    "inventoryRequired": ["wings_pass"]
  },
  "softlockDetection": {
    "enabled": true,
    "maxSceneRevisits": 3,
    "failOnDetection": true
  }
}
