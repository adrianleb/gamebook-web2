{
  "name": "gamebook-web2",
  "version": "0.0.1",
  "description": "Deterministic gamebook engine for web",
  "type": "module",
  "scripts": {
    "test": "bun test tests/**/*.test.ts",
    "test:engine": "bun test tests/engine/*.test.ts",
    "test:headless": "bun test tests/engine/headless-runner.test.ts",
    "validate:content": "node scripts/validate-content.js",
    "validate:content:strict": "node scripts/validate-content.js --fail-on-warnings",
    "headless": "node dist/cli/headless-runner.js",
    "headless:run": "node dist/cli/headless-runner.js run",
    "headless:run-all": "node dist/cli/headless-runner.js run-all",
    "headless:coverage": "node dist/cli/headless-runner.js coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "build": "tsc",
    "dev": "vite",
    "build:browser": "vite build"
  },
  "bin": {
    "gamebook-runner": "./dist/cli/headless-runner.js"
  },
  "keywords": [
    "gamebook",
    "engine",
    "deterministic",
    "state-machine"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "bun-types": "latest",
    "typescript": "^5.3.0",
    "vite": "^7.3.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {},
  "engines": {
    "node": ">=20.0.0"
  }
}
